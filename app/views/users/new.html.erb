<center>
  <h1>Welcome to Viewing Party</h1>
    <br>
  <h4> Please Register for an Account</h4>

  <%= form_with url: '/registration', local: true do  |form| %>
    <% form.label :name %>
    <%= form.text_field :name, placeholder: "Name" %><br>
    <br>
    <% form.label :email  %>
    <%= form.text_field :email, placeholder: "Email" %><br>
    <br>
    <% form.label :password %>
    <%= form.text_field :password, placeholder: "Password" %><br>
    <br>
    <% form.label :password_confrimation %>
    <%= form.text_field :password_confirmation, placeholder: "Password Confirmation" %><br>
    <br>
    <%= form.submit 'Register'%>
  <% end %>
  <br>
  <%= link_to 'Already Registered? Log in Here', '/' %>
</center>
